{% extends "layout.twig" %}

{% block content %}

  <h3>Offer</h3>

  <form class="form-horizontal" role="form" method="post">
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">Name</label>
      <div class="col-sm-10">
        <input type="text" name="name" class="form-control" id="name" placeholder="Name" value="{% if offer is defined %}{{offer.name}}{% endif %}">
      </div>
    </div>
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">Type</label>
      <div class="col-sm-10">
        <label class="radio-inline">
          <input type="radio" name="type" value="sub" {% if offer.type is defined and offer.type == 'sub' %}checked="checked"{% endif %}> Sub
        </label>
        <label class="radio-inline">
          <input type="radio" name="type" value="act" {% if offer.type is defined and offer.type == 'act' %}checked="checked"{% endif %}> Act
        </label>
      </div>
    </div>
    <div class="form-group">
      <label for="price" class="col-sm-2 control-label">Price</label>
      <div class="col-sm-10">
        <input type="text" name="price" class="form-control" id="price" placeholder="Price" value="{% if offer is defined %}{{offer.price}}{% endif %}">
      </div>
    </div>
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">Service</label>
      <div class="col-sm-10">
      <select name="service_id" class="form-control">
        <option></option>
        {% for service in services %}
        <option value="{{service.id}}" {% if offer.service_id is defined and offer.service_id == service.id %}selected="selected"{% endif %}>{{service.name}}</option>
        {% endfor %}
      </select>
      </div>
    </div>
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">Operator</label>
      <div class="col-sm-10">
      <select name="operator" class="form-control">
        <option></option>
        {% for operator in operators %}
        <option value="{{operator}}" {% if offer.operator is defined and offer.operator == operator %}selected="selected"{% endif %}>{{operator}}</option>
        {% endfor %}
      </select>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-success">Save</button>
      </div>
    </div>
  </form>

{% endblock %}
